datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model ContentType {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String  @unique
  slug  String  @unique
  pages Page[]
  posts Post[]

  @@map("contentTypes")
}

model Page {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  content         String
  slug            String?     @unique
  description     String?
  author          String
  date            DateTime    @default(now())
  image           String?
  keywords        String[]    @default([])
  seoTitle        String?
  seoDescription  String?
  seoImage        String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  contentType     ContentType @relation(fields: [contentTypeId], references: [id])
  contentTypeId   String      @db.ObjectId
  sources         Json?

  @@map("pages")
}

model Post {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  content         String
  slug            String?     @unique
  description     String?
  author          String
  date            DateTime    @default(now())
  image           String?
  keywords        String[]    @default([])
  seoTitle        String?
  seoDescription  String?
  seoImage        String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  contentType     ContentType @relation(fields: [contentTypeId], references: [id])
  contentTypeId   String      @db.ObjectId
  sources         Json?

  @@map("posts")
}
